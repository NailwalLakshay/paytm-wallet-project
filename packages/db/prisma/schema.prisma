
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  Balance Balance[]
  OnRampTransaction OnRampTransaction[]
}

model Balance {
  id Int @id @default(autoincrement())
  amount Int
  locked Int
  decimal Int
  userId Int @unique
  user User @relation(fields: [userId] , references: [id])
}

model OnRampTransaction{
  id Int @id @default(autoincrement())
  amount Int
  decimal Int
  Provider String
  userId Int @unique
  Status OnRampStatus
  StartTime DateTime
  token String @unique
  user User @relation(fields: [userId] , references: [id])
}

enum OnRampStatus {
  SUCCESS
  FAILED
  PENDING
}